# Load support functions
. ../../lib/functions.sh

PROG=php
VER=5.5.4
VERHUMAN=$VER
PKG=system/runtime/php-55
SUMMARY="PHP Server 5.5"
DESC="PHP is a widely-used general-purpose scripting language that is especially suited for Web development and can be embedded into HTML."

BUILD_DEPENDS_IPS="compress/bzip2
    database/sqlite-3
    library/libtool/libltdl 
    library/libxml2 
    library/libxslt 
    system/library/iconv/unicode 
    system/library/iconv/utf-8 
    system/library/iconv/utf-8/manual 
    system/library/iconv/xsh4/latin 
    web/curl 
    library/libldap
    library/freetype2 
    library/libgd  
    library/libjpeg 
    library/libmcrypt 
    library/libpng 
    library/libpq5 
    library/libssh2 
    library/mhash"

# Mostly auto-generated; these are additional
DEPENDS_IPS="database/sqlite-3 
    system/library/iconv/unicode 
    system/library/iconv/utf-8 
    system/library/iconv/xsh4/latin 
    library/libgd 
    library/libssh2 
    library/mhash"

# Though not strictly needed since we override build(), still nice to set
BUILDARCH=64
PREFIX=$PREFIX/php55
reset_configure_opts

CFLAGS="-O2 -I/usr/local/include"
LDFLAGS64="$LDFLAGS64 -L/usr/local/lib/$ISAPART64 -R/usr/local/lib/$ISAPART64 \
    -L$PREFIX/lib -R$PREFIX/lib"

# The contents of this variable get passed to configure later on with the
# apache apxs stuff added in
CONFIGURE_OPTS="
        --prefix=$PREFIX
        --sysconfdir=$PREFIX/etc
        --includedir=$PREFIX/include
        --bindir=$PREFIX/bin
        --sbindir=$PREFIX/sbin
        --libdir=$PREFIX/lib
        --libexecdir=$PREFIX/libexec
        --with-pear=$PREFIX/lib/php
        --with-gd
        --with-jpeg-dir=/usr/local
        --with-png-dir=/usr/local
        --with-freetype-dir=/usr/local
        --with-zlib
        --enable-pdo
        --with-pdo_sqlite
        --with-pdo-pgsql=/usr/local
        --with-pgsql=/usr/local
        --with-bz2
        --with-curl=/usr/local
        --with-ldap=/usr/local
        --with-ldap-sasl=yes
        --with-mhash=/usr/local
        --with-mcrypt=/usr/local
        --enable-soap
        --with-iconv
        --with-xsl=/usr/local
        --enable-exif
        --enable-bcmath
        --enable-calendar
        --enable-ftp
        --enable-mbstring
        --enable-sockets
        --with-gettext
        --with-sqlite
        --enable-pcntl
        --with-openssl
        --enable-fastcgi
        "

#        --with-pdo-mysql=/opt/omni
#        --with-mysql=/opt/omni
#        --with-mysqli=/opt/omni/bin/$ISAPART64/mysql_config

make_install() {
    logmsg "--- make install"
    logcmd $MAKE DESTDIR=${DESTDIR} INSTALL_ROOT=${DESTDIR} install || \
        logerr "--- Make install failed"
}

# There are some dotfiles/dirs that look like noise
clean_dotfiles() {
    logmsg "--- Cleaning up dotfiles in destination directory"
    logcmd rm -rf $DESTDIR/.??* || \
        logerr "--- Unable to clean up destination directory"
}

init
download_source $PROG $PROG $VER
patch_source
prep_build
build
#clean_dotfiles
make_package
clean_up

